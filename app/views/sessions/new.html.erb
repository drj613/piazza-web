<% content_for :title, t(".title") %>
<layout-columns class="columns is-centered">
  <layout-column class="column box is-5 mt-6 p-5 m-4">
    <h1 class="title has-text-centered">
      <%= t(".title") %>
    </h1>
    <%= form_with(
          url: login_path,
          scope: :user,
          class: "is-flex is-flex-direction-column"
        ) do |form| %>
      <div class="block">
        <%= form.label :email, class: "label" %>
        <%= form.email_field :email, class: "input" %>
      </div>
      <div class="block">
        <%= form.label :password, class: "label" %>
        <%= form.password_field :password, class: "input" %>
      </div>
      <div class="is-align-self-flex-end is-flex is-align-items-center">
        <div class="is-flex is-flex-direction-column mr-4">
          <%= form.label :remember_me %>
          <%= form.check_box :remember_me %>
        </div>
        <%= form.submit t(".submit"), class: "button is-primary is-large mb-3 mt-3" %>
      </div>
    <% end %>
  </layout-column>
</layout-columns>
